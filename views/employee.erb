<h1><%= @employee.name %></h1>

<% if @employee.division_id == nil %>
  <h3><%= @employee.name %> has no division.</h3>
<% else %>
  <h3><%= @employee.name %>'s division is: <%= @division.name %></h3>
<% end %>

<form action="/employee_division" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="division_id">Select a division for this employee:</label>
  <select id='division_id' name='division_id' type='text'>
    <% @divisions.each() do |division| %>
    <option value="<%= division.id()%>"> <%= division.name() %> </option>
    <% end %>
  </select>

  <input id="employee_id" name="employee_id" type="hidden" value="<%= @employee.id %>">

  <button type="submit">Associate division</button>
</form>


<p><a href="/">Return to index</p>
