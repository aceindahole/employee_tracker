<div class="col-md-6">
  <h1>Divisions</h1>
  <ul>
    <% @divisions.each do |division| %>
    <li><a href="/division/<%= division.id %>"><%= division.name %></a></li>
    <% end %>
  </ul>

  <form action="/add_division" method="post">
    <label for="name">Add a division:</label>
    <input id="name" name="name" type="text" placeholder="enter division name">

    <button type="submit">Add Division</button>
  </form>
</div>

<div class="col-md-6">
  <h1>Employees</h1>
  <ul>
    <% @employees.each do |employee| %>
    <li><a href="/employee/<%= employee.id %>"><%= employee.name %></a></li>
    <% end %>
  </ul>

  <form action="/add_employee" method="post">
    <label for="name">Add an employee:</label>
    <input id="name" name="name" type="text" placeholder="enter name">

    <button type="submit">Add employee</button>
  </form>
</div>
